@model List<Nobet>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">Doctor Disponibility List</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <div class="row pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Nobet" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Disponibility
            </a>
        </div>
    </div>


    <table id="tblData" class="table table-bordered table-striped">
        <thead class="text-center">
            <tr>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Doctor</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>

    @section Scripts {
        <script src="~/js/nobet.js"></script>
    }

</div>