@model IEnumerable<Pediatric_Service.Models.Nobet>

@{
    ViewData["Title"] = "Available Shifts";
}

<h2>Available Shifts</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Doctor</th>
            <th>Department</th>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nobet in Model)
        {
            <tr>
                <td>@nobet.Doctor.FullName</td>
                <td>@nobet.Department.Name</td>
                <td>@nobet.Date.ToString("dd/MM/yyyy")</td>
                <td>@nobet.StartTime.ToString("HH:mm")</td>
                <td>@nobet.EndTime.ToString("HH:mm")</td>
                <td>
                    <a asp-area="User" asp-action="Book" asp-controller="Appointment"
                       asp-route-nobetId="@nobet.ID" class="btn btn-primary">Book</a>
                </td>
            </tr>
        }
    </tbody>
</table>