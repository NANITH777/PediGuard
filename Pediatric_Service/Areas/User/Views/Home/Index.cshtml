@{
    ViewData["Title"] = "Pediatric Department Management System";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="position-relative text-white text-center bg-primary py-5">
        <div class="overlay position-absolute top-0 start-0 end-0 bottom-0" style="background: linear-gradient(135deg, #1e90ff 0%, #87cefa 100%);">
            <div class="position-absolute top-0 start-0 end-0 bottom-0 bg-dark opacity-50"></div>
        </div>

        <div class="container position-relative z-3">
            <h1 class="display-4 fw-bold mb-4">Pediatric Department Management System</h1>
            <p class="lead mb-5">
                Modern Solutions for Reliable, Compassionate, and Coordinated Healthcare
            </p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#features" class="btn btn-light btn-lg">
                    <i class="bi bi-hospital me-2"></i> Explore Our Services
                </a>
                <a href="#contact" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-envelope me-2"></i> Contact Us
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <section id="features" class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-6">Our Core Features</h2>
                <p class="text-muted">Efficient management tailored for modern pediatric healthcare</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-lg">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-calendar-check display-4 text-primary mb-3"></i>
                            <h3 class="card-title">On-Call Scheduling</h3>
                            <p class="card-text text-muted">
                                Seamless scheduling for pediatric assistants with advanced automation.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-lg">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-people display-4 text-success mb-3"></i>
                            <h3 class="card-title">Department Coordination</h3>
                            <p class="card-text text-muted">
                                Streamlined communication and meeting management between assistants and faculty.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-lg">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-shield-check display-4 text-danger mb-3"></i>
                            <h3 class="card-title">Emergency Management</h3>
                            <p class="card-text text-muted">
                                Quick and coordinated responses to emergencies for better patient outcomes.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Promotional Section -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="display-6 mb-4">Excellence in Pediatric Care</h2>
                    <p class="lead">
                        Our hospital is committed to providing top-notch pediatric healthcare services. With state-of-the-art technology and a highly skilled team, we ensure that every child receives the care they deserve.
                    </p>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle text-light me-2"></i> Reliable and compassionate care</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-light me-2"></i> Focus on patient safety and well-being</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-light me-2"></i> Advanced facilities for critical and emergency care</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <img src="image/img.jpg" class="img-fluid" alt="Excellence in Pediatric Care" />
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-5 bg-light">
        <div class="container text-center">
            <h2 class="display-6 mb-4">What People Say About Us</h2>
            <p class="lead text-muted mb-5">Real stories from families who trust us for their pediatric needs.</p>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <p class="card-text text-muted">"The staff is incredibly caring and attentive. My child received excellent treatment, and the process was so smooth!"</p>
                            <h5 class="card-title mt-3">- Fulchany A.</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <p class="card-text text-muted">"Amazing facilities and dedicated healthcare professionals. Highly recommended!"</p>
                            <h5 class="card-title mt-3">- Gunda P.</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <p class="card-text text-muted">"Their emergency response system is outstanding. My child was treated quickly and effectively."</p>
                            <h5 class="card-title mt-3">- Luss H.</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Information -->
    <section id="contact" class="bg-light py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-6 fw-bold">Get in Touch</h2>
                <p class="text-muted">We are here to assist you. Feel free to contact us for more information or inquiries.</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-4">
                            <form>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="name" class="form-label fw-bold">Full Name</label>
                                        <input type="text" id="name" class="form-control" placeholder="Enter your name" required>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="email" class="form-label fw-bold">Email Address</label>
                                        <input type="email" id="email" class="form-control" placeholder="Enter your email" required>
                                    </div>
                                </div>

                                <div class="my-3">
                                    <label for="subject" class="form-label fw-bold">Subject</label>
                                    <input type="text" id="subject" class="form-control" placeholder="Enter the subject" required>
                                </div>

                                <div class="my-3">
                                    <label for="message" class="form-label fw-bold">Message</label>
                                    <textarea id="message" class="form-control" rows="5" placeholder="Write your message here..." required></textarea>
                                </div>

                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg px-5">
                                        <i class="bi bi-send me-2"></i> Send Message
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
