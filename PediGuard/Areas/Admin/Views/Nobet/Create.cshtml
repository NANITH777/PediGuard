@model Nobet

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">Create Nobet</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post" class="row">
        <div class="border p-3">
            <!-- Date Field -->
            <div class="form-floating py-2 col-12">
                <input asp-for="Date" type="date" class="form-control border-0 shadow" />
                <label asp-for="Date" class="ms-2"></label>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Start Time Field -->
            <div class="form-floating py-2 col-12">
                <input asp-for="StartTime" type="time" class="form-control border-0 shadow" />
                <label asp-for="StartTime" class="ms-2"></label>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <!-- End Time Field -->
            <div class="form-floating py-2 col-12">
                <input asp-for="EndTime" type="time" class="form-control border-0 shadow" />
                <label asp-for="EndTime" class="ms-2"></label>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <!-- Submit and Back Buttons -->
            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Nobet" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}