@model Nobet


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary text-white">Delete Nobet</h2>
            </div>
        </div>  
    </div>
</div>
<div class="card-body p-4">
    <form method="post">
        <div class="border p-3 mt-4">
            <!-- Date Field (Disabled) -->
            <div class="form-floating py-2 col-12">
                <input asp-for="Date" type="date" disabled class="form-control border-0 shadow bg-light" />
                <label asp-for="Date" class="ms-2"></label>
            </div>

            <!-- Start Time Field (Disabled) -->
            <div class="form-floating py-2 col-12">
                <input asp-for="StartTime" type="time" disabled class="form-control border-0 shadow bg-light" />
                <label asp-for="StartTime" class="ms-2"></label>
            </div>

            <!-- End Time Field (Disabled) -->
            <div class="form-floating py-2 col-12">
                <input asp-for="EndTime" type="time" disabled class="form-control border-0 shadow bg-light" />
                <label asp-for="EndTime" class="ms-2"></label>
            </div>

            <div class="row mt-3">
                <!-- Delete Button -->
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <!-- Back to List Button -->
                <div class="col-6 col-md-3">
                    <a asp-controller="Nobet" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>




