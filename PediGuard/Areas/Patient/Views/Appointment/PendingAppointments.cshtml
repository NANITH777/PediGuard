@model IEnumerable<PediGuard.Models.Appointment>

@{
    ViewData["Title"] = "Pending Appointments";
}

<h2>Pending Appointments</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Assistant</th>
            <th>Department</th>
            <th>Date</th>
            <th>Patient</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Nobet.Assistant.FullName</td>
                <td>@appointment.Nobet.Department.Name</td>
                <td>@appointment.Nobet.Date.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@appointment.ApplicationUser.Name</td>
                <td>
                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@appointment.ID" />
                        <input type="hidden" name="status" value="Confirmed" />
                        <button type="submit" class="btn btn-success">Confirm</button>
                    </form>
                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@appointment.ID" />
                        <input type="hidden" name="status" value="Cancelled" />
                        <button type="submit" class="btn btn-danger">Cancel</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>