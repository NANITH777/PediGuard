@model PediGuard.Models.Appointment

@{
    ViewData["Title"] = "Update Appointment Status";
}

<h2>Update Appointment Status</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Appointment Details</h5>
        <p class="card-text"><strong>Assistant:</strong> @Model.Nobet.Assistant.FullName</p>
        <p class="card-text"><strong>Department:</strong> @Model.Nobet.Department.Name</p>
        <p class="card-text"><strong>Date:</strong> @Model.Nobet.Date.ToString("dd/MM/yyyy HH:mm")</p>
        <p class="card-text"><strong>Patient:</strong> @Model.ApplicationUser.Name</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>
    </div>
</div>

<form asp-action="UpdateStatus" method="post">
    <div class="form-group">
        <label for="status">Status</label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<AppointmentStatus>()"></select>
    </div>
    <button type="submit" class="btn btn-primary">Update Status</button>
</form>