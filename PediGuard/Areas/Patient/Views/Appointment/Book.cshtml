@model AppointmentVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">
                        <i class="bi bi-calendar-plus me-2"></i>Book an Appointment
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Book" method="post">
                        <input asp-for="Appointment.NobetID" type="hidden" />

                        <div class="mb-3">
                            <label class="form-label">Assistant</label>
                            <input type="text" class="form-control"
                                   value="@Model.NobetList.First().Text" readonly>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Appointment.Notes" class="form-label">Additional Notes</label>
                            <textarea asp-for="Appointment.Notes" class="form-control" rows="3"
                                      placeholder="Additional information..."></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Confirm Booking
                            </button>
                            <button type="button" class="btn btn-danger btn-lg" onclick="history.back()">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
