@model Department


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary text-white">Delete Department</h2>
            </div>
        </div>  
    </div>
</div>
<div class="card-body p-4">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" disabled class="form-control border-0 shadow bg-light"  />
                <label asp-for="Name" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="NumberOfBeds" disabled class="form-control border-0 shadow bg-light" />  @* Tag helper asp-for*@
                <label asp-for="NumberOfBeds" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="CurrentCapacity" disabled class="form-control border-0 shadow bg-light" />  @* Tag helper asp-for*@
                <label asp-for="CurrentCapacity" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ResponsibleDoctorName" disabled class="form-control border-0 shadow bg-light" />  @* Tag helper asp-for*@
                <label asp-for="ResponsibleDoctorName" class="ms-2"></label>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Department" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>



