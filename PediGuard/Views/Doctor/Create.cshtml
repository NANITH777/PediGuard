@model Doctor

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">Create Doctor</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post" class="row">
        <div class="border p-3">
            <div class="form-floating py-2 col-12">
                <input asp-for="LastName" class="form-control border-0 shadow" />
                <label asp-for="LastName" class="ms-2"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="FirstName" class="form-control border-0 shadow" />  @* Tag helper asp-for*@
                <label asp-for="FirstName" class="ms-2"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Phone" class="form-control border-0 shadow" />  @* Tag helper asp-for*@
                <label asp-for="Phone" class="ms-2"></label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Email" class="form-control border-0 shadow" />  @* Tag helper asp-for*@
                <label asp-for="Email" class="ms-2"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Address" class="form-control border-0 shadow" />  @* Tag helper asp-for*@
                <label asp-for="Address" class="ms-2"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <select asp-for="IsActive" class="form-select border-0 shadow">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <label asp-for="IsActive" class="ms-2"></label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>


            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Doctor" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
